<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"

    >

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/textview_bg_alt"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="HOUSE NAME"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_house_ind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="ORETH PULIMOOTIL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="POST OFFICE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_po"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="VALANGAVATTOM PO" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/textview_bg_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="TOWN"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="THIRUVALLA" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="DISTRICT"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_district"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="PATHANAMTHITTA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/textview_bg_alt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="PIN"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="689104" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:text="STATE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="KERALA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/textview_bg_alt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="TELEPHONE WITH CODE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_tel_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="+914692747458" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="MOBILE WITH CODE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="+919744048080" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/textview_bg_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="EMERGENCY CONTACT"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_emer_contact_india"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="V.M. MATHAI" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="TELEPHONE OFFICE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_emer_tel_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:orientation="vertical"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/textColor"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/textview_bg_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:text="TELEPHONE RESIDENTIAL"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_emer_tel_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:id="@+id/parish_emer_tel_mob_ind"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:text="TELEPHONE MOBILE"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/parish_emer_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:padding="4dp"
                android:textColor="@color/textColor"
                tools:text="" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>