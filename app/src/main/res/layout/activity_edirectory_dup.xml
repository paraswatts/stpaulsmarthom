<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="#f6f6f6"
    tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.EDirectoryActivity">

    <ImageView
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/app_logo"

        />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_weight="0.6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="St. Paul's Mar Thoma Parish"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginTop="8dp"
       android:layout_weight="0.6"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:text="Kingdom of Bahrain"
    android:textColor="#FF0000"
    android:layout_gravity="center_horizontal"
    android:textSize="20dp"
    android:textStyle="bold"
        android:fontFamily="@font/miranda"
    />

    <EditText
        android:id="@+id/et_user"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Roll No."
        android:textColorHint="#000"
        android:background="@drawable/edittext_bg1"
        android:paddingLeft="8dp"
        />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="CPR No."
        android:textColorHint="#000"
        android:background="@drawable/edittext_bg1"
        android:paddingLeft="8dp"
        />
    <Button
        android:id="@+id/bt_login"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Log in"
        />

    <LinearLayout

        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>
