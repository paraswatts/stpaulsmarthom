<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:fillViewport="true"
    tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.KaisthanaSamithiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.KaisthanaSamithiActivity">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_head"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#646464"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="OFFICE BEARERS"
                android:layout_centerInParent="true"    />
        </RelativeLayout>
        <!--<ListView-->
        <!--android:layout_below="@+id/rl_head"-->
        <!--android:visibility="gone"-->
        <!--android:scrollbars="none"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:id="@+id/listView_Org"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/recyclerView_orgDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/rl_header_timing"
            android:layout_below="@id/recyclerView_orgDetail"
            android:layout_marginTop="8dp"
            android:background="#646464"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/header_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="OFFICE BEARERS"
                android:layout_centerInParent="true"    />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:layout_below="@+id/rl_header_timing"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/recyclerView_orgTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/google_progress_org"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </RelativeLayout>
</ScrollView>