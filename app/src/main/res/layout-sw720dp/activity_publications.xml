<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.PublicationsActivity">

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/rl_parish"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="40sp"
                android:layout_marginLeft="31dp"
                android:text="Parish Bulletin"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_right_arrow_pub"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/rl_year_planner"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="40sp"
                android:layout_marginLeft="31dp"
                android:text="Year Planner"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_right_arrow_pub"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
