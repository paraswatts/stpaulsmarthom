<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:fillViewport="true"
    tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.KaisthanaSamithiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        tools:context="stpaulsmarthom.com.stpaulsmarthom.Activities.KaisthanaSamithiActivity">

        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/recyclerView_orgDetail"
            android:layout_below="@id/recyclerView_orgTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/rl_header_timing"
            android:layout_marginTop="8dp"
            android:background="#646464"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/header_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:text="OFFICE BEARERS"
                android:layout_centerInParent="true"    />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:layout_below="@+id/rl_header_timing"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/recyclerView_orgTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/google_progress_org"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <Button
            android:layout_below="@id/recyclerView_orgDetail"
            android:visibility="gone"
            android:id="@+id/bt_prayer_request_org"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#f9af10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRAYER REQUEST FORM"
            android:textColor="#FFF"
            android:layout_marginBottom="8dp"
            />


    </RelativeLayout>
</ScrollView>